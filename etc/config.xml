<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <crypto_payment>
                <model>CryptoPaymentFacade</model>
                <order_status>pending_cryptocore</order_status>
                <title>CryptoCore - payments with crypto currency</title>
                <can_use_checkout>1</can_use_checkout>
                <can_capture>1</can_capture>
                <can_refund>0</can_refund>
                <can_void>0</can_void>
                <sort_order>1</sort_order>
                <can_use_internal>0</can_use_internal>
                <active>1</active>
            </crypto_payment>
        </payment>
        <ccoresettings>
            <ccoresetup>
                <title>Pay with CryptoCurrency</title>
                <logo>https://gateway.ccore.online/images/logo32.png</logo>
                <active>0</active>
                <currentmode>test</currentmode>
                <timeout>30</timeout>
                <select_currency>1</select_currency>
                <allowed>BTC</allowed>
            </ccoresetup>
        </ccoresettings>
    </default>
</config>
